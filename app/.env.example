# Receipt cNFT (optional - mint receipt on SOL purchase)
# Run: npm run create-cnft-tree, then set address below
NEXT_PUBLIC_CNFT_TREE_ADDRESS=
MINT_FEE_SOL=0.0001

# Bitquery (optional - balance verification fallback when RPC reports 0 SOL)
# Get key at https://account.bitquery.io - used by /api/balance/verify
BITQUERY_API_KEY=your_bitquery_api_key

# Solana (required for production - public RPC returns 403 under load)
# Get a free key: Helius (helius.dev), QuickNode, or Alchemy
NEXT_PUBLIC_SOLANA_NETWORK=mainnet-beta
# Mainnet: https://mainnet.helius-rpc.com/?api-key=YOUR_KEY
# Devnet:  https://devnet.helius-rpc.com/?api-key=YOUR_KEY
NEXT_PUBLIC_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_HELIUS_API_KEY

# $FSBD Token (TODO: Replace after launch)
NEXT_PUBLIC_FSBD_TOKEN_MINT=FSBD_TOKEN_MINT_PLACEHOLDER

# Tier Thresholds (adjustable as market cap grows)
# These determine when users unlock tiered benefits and platform fee discounts
# Can be lowered to allow more users access to discounts as token value increases
NEXT_PUBLIC_TIER_BRONZE=100000   # Bronze tier: 100k+ tokens
NEXT_PUBLIC_TIER_SILVER=1000000  # Silver tier: 1M+ tokens
NEXT_PUBLIC_TIER_GOLD=10000000   # Gold tier: 10M+ tokens

# App Wallet
NEXT_PUBLIC_APP_WALLET=YOUR_WALLET_ADDRESS

# Dev wallet (optional, auctions): PUBLIC key only - never put private keys in NEXT_PUBLIC_*
# NEXT_PUBLIC_DEV_WALLET_ADDRESS=YourDevWalletPublicKey

# Supabase (optional)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_key
# Service role key (server-side only, never expose to client)
# Used for admin operations that bypass RLS
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Encryption
NEXT_PUBLIC_ENCRYPTION_KEY=your-32-char-key

# Privy (for wallet setup with email/social)
# Get your App ID from https://privy.io
NEXT_PUBLIC_PRIVY_APP_ID=your_privy_app_id

# Pinata (for IPFS image uploads)
# Get your JWT from https://app.pinata.cloud - FREE tier available
NEXT_PUBLIC_PINATA_JWT=your_pinata_jwt_token
# Optional: Custom gateway (defaults to gateway.pinata.cloud)
NEXT_PUBLIC_PINATA_GATEWAY=gateway.pinata.cloud
